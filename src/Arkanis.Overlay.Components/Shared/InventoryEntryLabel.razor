<MudStack AlignItems="@AlignItems.Center"
          Class="@Class"
          Row>
    @if (Model is HangarInventoryEntry hangarEntry)
    {
        if (!string.IsNullOrWhiteSpace(hangarEntry.NameTag))
        {
            <MudText Typo="@Typo.h6"
                     Class="no-wrap">
                "@hangarEntry.NameTag"
            </MudText>
        }

        <GameEntityNameLabel
            Model="@Model.Entity.Name"
            Typo="@Typo.h6"
            Embedded/>
    }
    else
    {
        <GameEntityNameLabel
            Model="@Model.Entity.Name"
            Typo="@Typo.h6"/>
    }
    @if (!WithoutLocation)
    {
        @if (Model is ILocationInventory locationInventory)
        {
            <MudText Typo="@Typo.body1" Class="text-secondary">
                at
            </MudText>
            <GameEntityNameLabel
                Model="@locationInventory.Location.Name"/>
        }
        else if (Model is IVehicleInventory vehicleInventory)
        {
            <MudText Typo="@Typo.body1" Class="text-secondary">
                from
            </MudText>
            <InventoryEntryLabel
                Model="@vehicleInventory.HangarEntry"
                WithoutLocation/>
        }
    }
</MudStack>

@code
{

    [Parameter]
    [EditorRequired]
    public required InventoryEntryBase Model { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public bool WithoutLocation { get; set; }

}
