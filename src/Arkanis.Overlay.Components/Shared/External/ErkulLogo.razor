@using System.Text
@using Arkanis.Overlay.Infrastructure.Helpers
<!--suppress CssUnusedSymbol, CssUnresolvedCustomProperty -->
<style>
    .erkul-logo-wrapper {
        display: flex;
        width: fit-content;
    }

    .erkul-logo {
        position: relative;
    }

    .erkul-logo > img {
        display: block;
        width: 100%;
        height: 100%;
    }
</style>

@if (WithoutLink)
{
    @ImageContent
}
else
{
    <MudLink Href="@ExternalLinkHelper.GetErkulLink(ContentId)" Class="erkul-logo-wrapper" Target="_blank">
        @ImageContent
    </MudLink>
}

@code
{

    private RenderFragment ImageContent
        => @<picture class="@ClassContent">
               <MudImage
                   Style="@Style"
                   Src="@LinkHelper.GetPathToAsset(AssetPath)"
                   Alt="Erkul DPS Calculator"/>
           </picture>;

    private string AssetPath
        => WithoutName switch
        {
            true => "img/erkul-icon.svg",
            false => $"img/erkul-logo-{ThemeIdentifier}.svg",
        };

    private string ClassContent
    {
        get
        {
            var builder = new StringBuilder("uex-logo");
            if (Class is not null)
            {
                builder.Append(' ');
                builder.Append(Class);
            }

            return builder.ToString();
        }
    }

    private string ThemeIdentifier
        => ThemeVariant.ToString("G").ToLowerInvariant();

    [Parameter]
    public Theme ThemeVariant { get; set; } = Theme.Light;

    [Parameter]
    public bool WithoutLink { get; set; }

    [Parameter]
    public bool WithoutName { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }

    [Parameter]
    public string ContentId { get; set; } = "logo";

    public enum Theme
    {
        Light,
        Dark,
    }

}
