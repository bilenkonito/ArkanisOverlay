@using System.Text
@using Arkanis.Overlay.Infrastructure.Helpers
<!--suppress CssUnusedSymbol, CssUnresolvedCustomProperty -->
<style>
    .uex-logo-wrapper {
        display: flex;
        width: fit-content;
    }

    .uex-logo {
        position: relative;
    }

    .uex-logo > img {
        display: block;
        width: 100%;
        height: 100%;
    }
</style>

@if (WithoutLink)
{
    @ImageContent
}
else
{
    <MudLink Href="@ExternalLinkHelper.GetUexLink(ContentId)" Class="uex-logo-wrapper" Target="_blank">
        @ImageContent
    </MudLink>
}

@code
{

    private RenderFragment ImageContent
        => @<picture class="@ClassContent">
               <MudImage
                   Style="@Style"
                   Src="@LinkHelper.GetPathToAsset(AssetPath)"
                   Alt="United Express (UEX)"/>
           </picture>;

    private string AssetPath
        => this switch
        {
            { WhiteVariant: true } => "img/uex-logo-white.svg",
            { WhiteVariant: false } => "img/uex-logo.svg",
        };

    private string ClassContent
    {
        get
        {
            var builder = new StringBuilder("uex-logo");
            if (Class is not null)
            {
                builder.Append(' ');
                builder.Append(Class);
            }

            return builder.ToString();
        }
    }

    [Parameter]
    public bool WhiteVariant { get; set; }

    [Parameter]
    public bool WithoutLink { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }

    [Parameter]
    public string ContentId { get; set; } = "logo";

}
