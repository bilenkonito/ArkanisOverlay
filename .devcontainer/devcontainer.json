{
    "name": "Dotnet",
    "image": "mcr.microsoft.com/devcontainers/dotnet:dev-10.0-preview",
    "features": {
        "ghcr.io/devcontainers/features/dotnet": {
            "version": "10.0-preview",
            "additionalVersions": [
                "8.0"
            ],
            "aspNetCoreRuntimeVersions": [
                "8.0"
            ],
            "dotnetRuntimeVersions": [
                "8.0"
            ],
            "workloads": [
                "maui",
                "blazor"
            ]
        },
        "ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {},
        "ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {}
    },
	"customizations": {
		"vscode": {
			"settings": {
                "shellcheck.enable": false,
                "shellcheck.enableQuickFix": false,
                "shellcheck.run": "manual",
                "editor.suggest.insertMode": "replace",
                "editor.suggest.localityBonus": true,
                "editor.suggest.preview": true,
                "editor.suggest.showStatusBar": true,
                "editor.suggest.showWords": false
            },
			"extensions": []
		}
	},
    "portsAttributes": {},
    "remoteUser": "root",
    "postCreateCommand": "dotnet restore"
}
